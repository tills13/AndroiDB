<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AndroiDB.Label" parent="AndroiDB.AppTheme">
        <item name="android:textColor">@color/grey_200</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AndroiDB.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">1sp</item>
    </style>

    <style name="AndroiDB.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">1sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>
