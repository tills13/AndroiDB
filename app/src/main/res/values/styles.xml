<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AndroiDB" parent="Theme.AppCompat.NoActionBar">
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="AndroiDB.AppTheme" parent="AndroiDB">
        <item name="android:windowBackground">@color/app_theme_color</item>

        <item name="android:colorPrimary">@color/app_theme_color</item>
        <item name="android:colorPrimaryDark">@color/app_theme_color_dark</item>

        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AndroiDB.AppBar" parent="AndroiDB">
        <item name="android:colorAccent">@color/grey_200</item>
        <item name="android:textColor">@color/grey_200</item>
        <item name="android:textColorPrimary">@color/grey_200</item>
        <item name="android:textColorPrimaryInverse">@color/blue_grey_800</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AndroiDB.Toolbar" parent="AndroiDB.AppBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:titleTextAppearance">@style/AndroiDB.Toolbar.Title</item>
        <item name="android:subtitleTextAppearance">@style/AndroiDB.Toolbar.Subtitle</item>
    </style>

    <style name="AndroiDB.Title" parent="AndroiDB">
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AndroiDB.Label" parent="AndroiDB">
        <item name="android:textColor">@color/grey_200</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AndroiDB.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AndroiDB.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">1sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>
