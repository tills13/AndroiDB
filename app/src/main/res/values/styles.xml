<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AndroiDB.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:elevation">0dp</item>
        <item name="colorAccent">@color/accent_material_light</item>
    </style>

    <style name="AndroiDB.Title" parent="AndroiDB.AppTheme">
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AndroiDB.Label" parent="AndroiDB.AppTheme">
        <item name="android:textColor">@color/grey_200</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AndroiDB.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AndroiDB.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">1sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AndroiDB.AppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AndroiDB.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
